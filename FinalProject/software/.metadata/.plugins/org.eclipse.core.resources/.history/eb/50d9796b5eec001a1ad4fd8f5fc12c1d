#include <stdio.h>
#include "player_logic.h"
#include "system.h"
#include "alt_types.h"
#include <unistd.h>  // usleep
#include "usb_kb.h"
#include "io_handler.h"
//#ifdef _WIN32
//#include <Windows.h>
//#else
//#include <unistd.h>
//#endif

#define UP_END 0
#define DOWN_END 479

#define LEFT_END 0
#define RIGHT_END 637


volatile int* game_file = 0x00000100;



enum Key_event
{PRESS_UP = 1, PRESS_DOWN, PRESS_LEFT, PRESS_RIGHT, PRESS_ATK, PRESS_SKILL
}event;
int main(){
	saber_t *saber;
	usb_init();		// initialize usb
	saber_init(saber);
	int key;
	while (1){
		double time_to_switch = 0.2;
		clock_t begin = clock();
		clock_t end = clock();
		while ((double)(end-begin)/CLOCKS_PER_SEC <time_to_switch){
			end = clock();
		}
		key = get_keycode();
		if (key == KEY_W){
			press_w(saber);
		}else if (key == KEY_S){
			press_s(saber);
		}else if (key == KEY_A){
			press_a(saber);
		}else if (key == KEY_D){
			press_d(saber);
		}else{
			stop(saber);
		}



	}
}













